# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Main Menu
GET        /                        controllers.mainMenuController.mainmenu
GET        /game                         controllers.mainMenuController.game
GET		   /glossary				controllers.mainMenuController.glossary
GET		   /leaderboard 			controllers.mainMenuController.leaderboard

GET        /menu                         controllers.LoginController.menu

#GET	   /login						 controllers.LoginController.login
GET	   	   /loginPage					 controllers.LoginController.loginPage

# Prefix must match `play.assets.urlPrefix`
GET        /assets/*file                 controllers.Assets.at(file)
GET        /versionedAssets/*file        controllers.Assets.versioned(path="/public", file: Asset)

+ nocsrf
POST 	   /login					 	 controllers.LoginController.login
+ nocsrf
POST 	   /create					 	 controllers.LoginController.createUser

# Ajax shit
GET		   /enemies				         controllers.DBController.enemies
GET		   /bosses				         controllers.DBController.bosses
GET		   /items				         controllers.DBController.items
GET		   /weapons				         controllers.DBController.weapons
GET		   /classes				         controllers.DBController.classes